{

    "project-name" : "ADC",
    "vm": [
      {
          "name" : "{project-name}-desktop1",
          "type" : "desktop",
          "size" : "SMALL",
          "region" : "uses",
          "public-dns" : true,
          "credentials": {
            "username" : "${username}",
            "password" : "${passeword}"
          },

          "post-creation-shell": {
               "url" : "http://github//abc.sh",
               "command" : "chmod +x *.sh"
           },

           "ports" : {
             "public"  : ["80", "8080"],
             "private" : ["22"]
           }
      }
    ]
}
