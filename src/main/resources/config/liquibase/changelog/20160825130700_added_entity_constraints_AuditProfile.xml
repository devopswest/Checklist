<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity AuditProfile.
    -->
    <changeSet id="20160825130700-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="audit_profiles_id"
                                 baseTableName="audit_profile_question"
                                 constraintName="fk_audit_profile_question_audit_profiles_id"
                                 referencedColumnNames="id"
                                 referencedTableName="audit_profile"/>
        <addForeignKeyConstraint baseColumnNames="questions_id"
                                 baseTableName="audit_profile_question"
                                 constraintName="fk_audit_profile_question_questions_id"
                                 referencedColumnNames="id"
                                 referencedTableName="checklist_question"/>
        
        <addForeignKeyConstraint baseColumnNames="audit_profiles_id"
                                 baseTableName="audit_profile_audit_question_response"
                                 constraintName="fk_audit_profile_audit_question_response_audit_profiles_id"
                                 referencedColumnNames="id"
                                 referencedTableName="audit_profile"/>
        <addForeignKeyConstraint baseColumnNames="audit_question_responses_id"
                                 baseTableName="audit_profile_audit_question_response"
                                 constraintName="audit_profile_audit_question_response_audit_question_responses_id"
                                 referencedColumnNames="id"
                                 referencedTableName="audit_question_response"/>
        
        <addForeignKeyConstraint baseColumnNames="client_id"
                                 baseTableName="audit_profile"
                                 constraintName="fk_audit_profile_client_id"
                                 referencedColumnNames="id"
                                 referencedTableName="client"/>

        <addForeignKeyConstraint baseColumnNames="checklist_id"
                                 baseTableName="audit_profile"
                                 constraintName="fk_audit_profile_checklist_id"
                                 referencedColumnNames="id"
                                 referencedTableName="checklist"/>

    </changeSet>
</databaseChangeLog>
